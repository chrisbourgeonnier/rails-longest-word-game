<div><h1>New Game</h1></div>

<div class="letters">
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</div>

<div>
<h2>What is the Longest word you can find?</h2>

<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <div class="input-group">
    <input type="text" name="word" placeholder="Your longest word" class="form-control">
    <input type="submit" value="Play" class="btn btn-primary">
  </div>
</form>
</div>
